# Notification System Environment Variables Example
# Copy this file to .env.local and fill in your values

# API Configuration
API_SECRET_KEY=your-secret-key-here
API_BASE_URL=http://localhost:8788

# Cloudflare Configuration
CLOUDFLARE_ACCOUNT_ID=your-account-id
CLOUDFLARE_API_TOKEN=your-api-token

# Database Configuration
DB_NAME=notification-system
DB_ID=your-database-id
DEV_DB_ID=your-dev-database-id
PROD_DB_ID=your-prod-database-id

# KV Namespace IDs
KV_CONFIG_CACHE=your-kv-namespace-id
DEV_KV_ID=your-dev-kv-id
PROD_KV_ID=your-prod-kv-id

# Queue Configuration
QUEUE_RETRY=retry-queue
QUEUE_FAILED=failed-queue

# Encryption Keys (32 characters)
ENCRYPT_KEY=your-32-character-encryption-key

# Test Configuration (for integration tests)
TEST_USER_ID=test-user
LARK_WEBHOOK=https://open.larksuite.com/open-apis/bot/v2/hook/your-webhook-id
LARK_SECRET=your-lark-secret

# Grafana Integration
GRAFANA_USERNAME=grafana
GRAFANA_PASSWORD=your-grafana-password